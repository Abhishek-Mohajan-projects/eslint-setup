{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react-hooks"],
  "rules": {
    "no-alert": "error",
    "semi": "warn",
    "linebreak-style": "off",
    "no-unused-vars": "error",
    "camelcase": "off",
    "eqeqeq": "off",
    "max-lines": ["error", 50],
    "max-depth": ["error", 2],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
